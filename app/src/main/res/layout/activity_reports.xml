<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reports">


    <TextView
        android:id="@+id/reportName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reports"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"/>

    <GridLayout
        android:id="@+id/grid3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">


        <EditText
            android:id="@+id/searchET"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:paddingLeft="5dp"
            android:hint="Type product name"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="Search"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reportName"/>

    </GridLayout>



    <Button
    android:id="@+id/btnViewAll"
    android:layout_width="250dp"
    android:layout_height="75dp"
    android:text="View All"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/grid3"
    android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnFilteredViews"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Filtered Views"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnViewAll"
        android:layout_marginTop="10dp"/>



    <Button
        android:id="@+id/btnTotalSpent"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:text="Show Total Spent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnFilteredViews"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/backBtnReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTotalSpent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="200dp"
        android:text="Back to Menu" />

</RelativeLayout>